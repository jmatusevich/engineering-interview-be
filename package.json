{
  "name": "engineering-interview-be",
  "version": "1.0.0",
  "description": "A to-do backend for an interview",
  "main": "src/index.ts",
  "scripts": {
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "migrate": "knex migrate:latest --knexfile ./src/database/knexfile",
    "dev": "ts-node-dev --transpile-only --no-notify --exit-child src/index.ts",
    "start": "ts-node src/index.ts",
    "docker": "docker compose up --build",
    "codegen": "graphql-codegen --config ./src/codegen.ts",
    "postinstall": "basetag link && basetag link --hook"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:jmatusevich/engineering-interview-be.git"
  },
  "author": "Javier Matusevich",
  "license": "MIT",
  "dependencies": {
    "apollo-server": "^3.12.1",
    "bcrypt": "^5.1.1",
    "datasource-sql": "^2.1.0",
    "dotenv": "^16.3.1",
    "graphql": "^16.8.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "tslint": "^6.1.3",
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-resolvers": "4.0.1",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "basetag": "^2.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
